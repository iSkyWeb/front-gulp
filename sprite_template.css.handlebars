{{#sprites}}
[class*="icon-"]:not([class*="-before"]), [class*="-before"]::before { {{!-- Unfortunatelly, minifiers aren't smart enought to create this rule while minifying. So we create custom rule for the less file size --}}
    background-image: url({{{escaped_image}}});
    display: block;
}
{{#ifContains name '-before'}} {{!-- Your condition here --}}
    .{{name}}::before {
        content: "";
        position: absolute;
        background-position: {{px.offset_x}} {{px.offset_y}};
        width: {{px.width}};
        height: {{px.height}};
    }
{{else}}
    .{{name}} {
        background-position: {{px.offset_x}} {{px.offset_y}};
        width: {{px.width}};
        height: {{px.height}};
    }
{{/ifContains}}
{{/sprites}}

